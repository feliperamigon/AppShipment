<div class="container">
  <div class="col-md-12">
  <p id="notice"><%= notice %></p>

  <h1>Paquetes de <%= current_user.name%></h1>

  <table id="lista-containers">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Dimensiones</th>
        <th>Descripcion</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @packages.each do |package| %>
        <tr>
          <td><%= package.title %></td>
          <td><%= package.dimension %></td>
          <td><%= package.description %></td>
          <td><%= package.container==nil ? "Sin asociar" : package.container%>
          <td><%= link_to 'Mostrar', package %></td>
          <td><%= link_to 'Editar', edit_package_path(package) %></td>
          <td><%= link_to 'Eliminar', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <button class="btn btn-md btn-success" style="margin-top:20px;"><%= link_to 'Crear nuevo Paquete', new_package_path %></button>
  </div>
</div>
<br>


